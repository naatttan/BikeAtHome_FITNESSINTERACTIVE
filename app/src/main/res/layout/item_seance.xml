<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/item_seance"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/viewSeparator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/boutonPlay"
        android:src="@drawable/ic_play"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:src="@drawable/ic_moreoption"
        android:id="@+id/moreoption"
        android:layout_width="70dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/nom_seance_mainpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="SEANCE"
        app:layout_constraintBottom_toTopOf="@+id/viewSeparator"
        app:layout_constraintLeft_toRightOf="@+id/boutonPlay"/>

    <TextView
        android:id="@+id/difficulte_seance_mainpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Moyen"
        app:layout_constraintTop_toBottomOf="@+id/viewSeparator"
        app:layout_constraintLeft_toRightOf="@+id/boutonPlay"/>

    <TextView
        android:id="@+id/temps_seance_mainpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="97"
        app:layout_constraintTop_toBottomOf="@+id/viewSeparator"
        app:layout_constraintLeft_toRightOf="@+id/difficulte_seance_mainpage"/>

    <TextView
        android:id="@+id/text_minutes_mainpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text=" minutes"
        app:layout_constraintTop_toBottomOf="@+id/viewSeparator"
        app:layout_constraintLeft_toRightOf="@+id/temps_seance_mainpage"/>

</androidx.constraintlayout.widget.ConstraintLayout>